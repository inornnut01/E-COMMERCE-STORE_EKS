# backend-secrets.yaml.example
# Copy this file to backend-secrets.yaml and fill in actual values
# DO NOT commit backend-secrets.yaml (it's in .gitignore)

apiVersion: v1
kind: Secret
metadata:
  name: backend-secrets
  namespace: e-commerce-store
type: Opaque
stringData:
  MONGO_URI: "mongodb://username:password@host:port/database?authSource=admin"
  UPSTASH_REDIS_URL: "rediss://default:password@host:port"
  STRIPE_SECRET_KEY: "sk_live_..." # หรือ sk_test_... สำหรับ testing
  ACCESS_TOKEN_SECRET: "your-super-secret-jwt-access-token-key-min-32-chars"
  REFRESH_TOKEN_SECRET: "your-super-secret-jwt-refresh-token-key-min-32-chars"
  CLOUDINARY_API_KEY: "your-cloudinary-api-key"
  CLOUDINARY_API_SECRET: "your-cloudinary-api-secret"
  AWS_ACCESS_KEY_ID: "your-aws-access-key-id"
  AWS_SECRET_ACCESS_KEY: "your-aws-secret-access-key"